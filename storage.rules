rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own animal photos
    match /animal-photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own medical documents
    match /medical-documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own animal media (photos, documents, health update media)
    match /animal-media/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own health update media
    match /health-update-media/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temporary rule for testing - allow all authenticated users to upload
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
} 